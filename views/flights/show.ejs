<%- include('../partials/header') %>
<h2>Flight summary</h2>

<div>
  <table>
    <tr class="flightListHeader">
      <th>Alirline</th>
      <th>Airport</th>
      <th>Flight Nunmber</th>
      <th>Departing time</th>
    </tr>
    <tr class="flightRow">
      <td><%=flight.airline%></td>
      <td><%=flight.airport%></td>
      <td><%=flight.flightNo%></td>
      <td><%=flight.departs%></td>   
    </tr>
  </table>
</div>

<div>
  <h3>Destinations</h3>
  <table>
    <tr class="flightListHeader">
      <th>Airport</th>
      <th>Arrival</th>
    </tr>
    <%flight.destinations.forEach (function (f) {%>
      <tr class="flightRow">
        <td><%=f.airport%></td>
        <td><%=f.arrival%></label></td> 
      </tr>
      <%})%>
  </table>
</div>
     
<div>
  <h3>Add Destination</h3>
  <form action="/flights/<%=flight.id%>/addDestination" method="post">
    <label for="airport">airport</label><select name="airport">
      <option value="AUS" selected>AUS</option>
      <option value="DEN">DFW</option>
      <option value="DEN">DEN</option>
      <option value="DEN">LAX</option>
    </select>
    <label for="arrival">arrival</label
    ><input type="datetime-local" name="arrival" />
    <input type="submit" />
  </form>
</div>

<div>
  <h3>Tickets</h3>
  <table>
    <tr class="flightListHeader">
      <th>seat</th>
      <th>Price</th>
    </tr>
    <%tickets.forEach (function (ticket) {%>
      <tr class="flightRow">
        <td><%=ticket.seat%></td>
        <td><%=ticket.price%></label></td> 
      </tr>
      <%})%>
  </table>
</div>
<form action="/tickets/new/<%=flight.id%>">
  <input type="submit" value="ADD Ticket" class="addTicket">
</form>


<%- include('../partials/footer') %>
