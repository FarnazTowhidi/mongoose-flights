<%- include('../partials/header') %>
<h2>Departing Flight</h2>
<table>
  <tr class="flightListHeader">
    <th>Alirline</th>
    <th>Airport</th>
    <th>Flight Nunmber</th>
    <th>Departing time</th>
    <th>Detail</th>
  </tr>

  <%flights.forEach (function(f) {%>
  <tr class="flightRow">
    <td><%=f.airline%></td>
    <td><%=f.airport%></td>
    <td><%=f.flightNo%></td>
    <td><%=f.departs%></td>
    <td class="red">
      <a href="/flights/<%=f._id%>" id="detailLink">Flight Details</a>
    </td>
  </tr>

  <%})%>
</table>
<%- include('../partials/footer') %>
